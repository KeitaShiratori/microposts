<h1><%= I18n.t('layouts.log_in') %></h1>

<div class="form-horizontal row">
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= f.email_field :email, class:"form-control", placeholder: I18n.t('users.log_in.email') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= f.password_field :password, class:"form-control", placeholder: I18n.t('users.log_in.password') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= f.submit I18n.t('users.log_in.submit'), class: "btn btn-sm btn-primary btn-block" %>
      </div>
    </div>
  <% end %>

  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <p>
      <%= I18n.t('users.log_in.new_user') %>
      <%= link_to I18n.t('users.log_in.sign_up_now'), signup_path %></p>
  </div>
</div>

<script>
  $(".nav_menu").removeClass("active");
  $("#log_in").addClass("active"); 
</script>