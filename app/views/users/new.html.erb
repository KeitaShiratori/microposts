<h1><%= I18n.t('layouts.sign_up') %></h1>

<div class="form-horizontal row">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %> 

    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= f.text_field :name, class:"form-control", placeholder: I18n.t('users.sign_up.name') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= f.text_field :email, class:"form-control", placeholder: I18n.t('users.sign_up.email') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= f.password_field :password, class:"form-control" ,placeholder: I18n.t('users.sign_up.password') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= f.password_field :password_confirmation, class:"form-control" ,placeholder: I18n.t('users.sign_up.confirmation') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= f.submit I18n.t('users.sign_up.submit'), class: "btn btn-sm btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(".nav_menu").removeClass("active");
  $("#sign_up").removeClass("hidden").addClass("active"); 
</script>