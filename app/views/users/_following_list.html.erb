<h3>
  Following(<%= @user.following_users.count %>)
</h3>

<ol class="following">
  <% @user.following_users.each do |u| %>
    <li id="follows-<%= u.id %>">
      <%= link_to gravatar_for(u, size: 50), u %>
      <span class="user"><%= link_to u.name, u %></span>
      <span class="content"><%= link_to u.description, u %></span>
      <span class="timestamp"><%= link_to u.location, u %></span>
    </li>
  <% end %>  
</ol>
