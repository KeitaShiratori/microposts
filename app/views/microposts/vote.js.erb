$("#vote-form-<%= @micropost.id %>").html("<%= escape_javascript(render('shared/flash')) %>");
$("#vote-form-<%= @micropost.id %>").html("<%= escape_javascript(render('shared/vote_form', micropost: @micropost)) %>");
$("#genki-<%= @micropost.id %>").html("<%= escape_javascript(render('shared/genki', micropost: @micropost)) %>");
$("#genki_sum").html("<%= escape_javascript(render('shared/genki_sum')) %>");
$(".genkidama")
  .height(<%= ReputationSystem::Evaluation.sum(:value).to_i / 60 + 20 %>)
  .width(<%=  ReputationSystem::Evaluation.sum(:value).to_i / 60 + 20 %>)
  .css("top",<%= ReputationSystem::Evaluation.sum(:value).to_i  / 30 * -0.5 + 7 %>)
  .css("left",<%= ReputationSystem::Evaluation.sum(:value).to_i / 60 * -0.5 + 28 %>)
  ;

<% if current_user.liked_for?(@micropost) %>
  $(".energy>span")
    .removeClass("hidden")
    .css({
        animation:"energy_shoot 2.2s ease 1",
        top: $("#vote-form-<%= @micropost.id %>").offset().top-30,
        left: $("#vote-form-<%= @micropost.id %>").offset().left+20,
      })
    ;
<% end %>