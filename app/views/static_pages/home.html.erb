<% if logged_in? %>
  <div class="row">
    <div class="col-md-4">
      <%= render 'shared/sidebar' %>
    </div>
    <div class="col-md-8">
      <div id="micropost_list">
        <h3>
          <%= I18n.t('static_pages.title.message') %>
        </h3>
        <%= render 'shared/micropost_list' %>
        <%= paginate @microposts %>
      </div>
    </div>
  </div>

<% else %>
  <div class="center jumbotron">
    <h1><%= I18n.t('static_pages.welcome_message') %></h1>
    <%= link_to "#{I18n.t('static_pages.sign_up_now')}", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

<script>
  $(".header_nav").removeClass("active");
  $("#home").addClass("active");
</script>